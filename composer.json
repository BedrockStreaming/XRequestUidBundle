{
    "name" : "m6web/xrequestuid-bundle",
    "type" : "symfony-bundle",
    "description" : "bundle sf2 allowing setting ids in headers propagated via guzzle",
    "authors" : [{
            "name" : "Olivier Mansour",
            "email" : "olivier.mansour@m6.fr"
        }
    ],
    "config": {
        "bin-dir": "bin/"
    },
    "require" : {
        "php" : "^7.4|^8.0",
        "symfony/symfony": "^2.7|^3.0|^4.0"
    },
    "require-dev" : {
        "atoum/atoum" : "^3.0|^4.0",
        "guzzlehttp/guzzle": "~6.0",
        "m6web/php-cs-fixer-config": "^2.0"
    },
    "autoload": {
        "psr-4": { "M6Web\\Bundle\\XRequestUidBundle\\": "src/" }
    }
}
